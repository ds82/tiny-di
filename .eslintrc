{
    "parser": "babel-eslint",
    "ecmaFeatures": {
      "classes": true,
      "modules": true
    },
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-use-before-define": [
          2,
          "nofunc"
        ],
        "no-multi-spaces": [
          2,
          {
            "exceptions": {"Property": false, "VariableDeclarator": true}
          }
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true
    }
}

